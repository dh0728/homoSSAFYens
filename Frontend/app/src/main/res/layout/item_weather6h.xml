<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#F8F8F8"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tvTime6h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16:00"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvSkyTemp6h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="맑음 · 30.2℃"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tvRainHumidity6h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="강수량: 0.0mm · 습도: 74%"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tvWindWave6h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="풍향: SE · 풍속: 0.8m/s · 파고: 0.28m"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tvDust6h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PM10: 좋음(18) · PM2.5: 보통(16)"
        android:textSize="13sp"/>
</LinearLayout>
