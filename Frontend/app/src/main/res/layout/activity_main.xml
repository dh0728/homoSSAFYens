<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_ocean_gradient"
    tools:context=".MainActivity">

    <!-- 상단 헤더: 제목(좌) / 날짜(우) -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="18dp"
        android:text="바다와치"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvDate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0"
        tools:ignore="RtlSymmetry"/>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="20dp"
        android:paddingTop="18dp"
        android:text="07.22 (화)"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tvTitle"/>

    <!-- 상단 웨이브 카드(현재 위치 근처 바다) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardNearestSea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_wave_card"
            android:padding="12dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFish"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:alpha="0.9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_kayaking_24"
                app:tint="@android:color/white" />


            <TextView
                android:id="@+id/tvNearestTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="현위치에서 가까운 바다"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/ivFish"
                app:layout_constraintTop_toTopOf="@id/ivFish" />

            <TextView
                android:id="@+id/tvNearestSub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="연화도 부근 · 3.9~8.4m · 암반"
                android:textColor="#E6FFFFFF"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvNearestTitle"
                app:layout_constraintTop_toBottomOf="@id/tvNearestTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 검색 바 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSearch"
        style="@style/Widget.Material3.TextInputLayout.FilledBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        app:startIconDrawable="@drawable/ic_search"
        app:boxBackgroundColor="#F2FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/cardNearestSea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:hint="포인트, 지역, 수심 등 검색"
            android:imeOptions="actionSearch"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tilSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:singleSelection="true"
        app:singleLine="false"

        android:gravity="center"
        app:chipSpacingHorizontal="8dp"
        app:chipSpacingVertical="4dp">

    <com.google.android.material.chip.Chip
        android:id="@+id/chipTide1"
        style="@style/Widget.Material3.Chip.Filter"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:text="물때 1일"
        android:gravity="center"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/chipTide7"
        style="@style/Widget.Material3.Chip.Filter"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:text="물때 7일"
        android:gravity="center"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/chipWeather6h"
        style="@style/Widget.Material3.Chip.Filter"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:text="날씨 6시간"
        android:gravity="center"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/chipWeather7"
        style="@style/Widget.Material3.Chip.Filter"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:text="날씨 7일"
        android:gravity="center"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/chipTemp"
        style="@style/Widget.Material3.Chip.Filter"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:text="수온"
        android:gravity="center"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/chipFishing"
        style="@style/Widget.Material3.Chip.Filter"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:text="낚시포인트"
        android:gravity="center"/>
</com.google.android.material.chip.ChipGroup>

    <!-- 리스트 자리: Fragment가 들어올 자리 -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/chipGroup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
